<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="upfront.assessmentitem"
      lang="en">

<body>
    <metal:main fill-slot="main">

    <div id="content-core">

            <h1>Assessment Item Container View</h1>
            <div tal:content="structure context/introduction/output|nothing" />

            <div tal:repeat="item view/assessmentitems">
                <span class="itemnumber"><span tal:replace="repeat/item/number">1</span>. </span>
                <tal:content tal:content="structure item/question/output" />
                <tal:marks tal:condition="item/marks|nothing">
                    <span tal:content="item/marks" />
                    <span tal:content="python:view.marks_string(item.marks)" />
                </tal:marks>
            </div>

    </div>

    </metal:main>
</body>
</html>
