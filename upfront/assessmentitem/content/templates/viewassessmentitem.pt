<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="upfront.assessmentitem"
      lang="en">

<body>
    <metal:main fill-slot="main">

    <div id="content-core">

            <h1>Assessment Item View</h1>
            <div tal:content="structure python:view.assessment_item().introduction.output" />

            <div>Questions:</div><br />

            <tal:questions condition="view/questions">
                <div tal:repeat="question view/questions">
                    <span tal:content="repeat/question/number" /><span>.</span>
                    <span tal:content="structure python:question.getObject().question.output" />
                    <span tal:content="python:question.getObject().marks" />
                    <span tal:content="python:view.marks_string(question.getObject().marks)" />
                    <div></div><br />
                </div>
            </tal:questions>
    </div>

    </metal:main>
</body>
</html>
